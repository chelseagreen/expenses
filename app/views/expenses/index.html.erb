<h1>All</h1>

<table class="center">
<tr>
  <th><%= sortable "item" %></th>
  <th><%= sortable "cost" %></th>
  <th><%= sortable "date" %></th>
  <th><%= sortable "category" %></th>
</tr>

<% @expenses.each do |expense| %>
<tr>
    <td><%= expense.item %></td>
    <td><%= expense.cost %></td>
    <td><%= expense.date %></td>
    <td><%= expense.category %></td>
    <td><%= link_to ' View ', expense_path(expense) %></td>
    <td><%= link_to ' Edit ', edit_expense_path(expense) %></td>
    <td><%= link_to ' Delete ', expense_path(expense),
        method: :delete,
        data: { confirm: 'Are you sure you want to delete this item?' } %></td>
</tr>
<% end %>
</table>

