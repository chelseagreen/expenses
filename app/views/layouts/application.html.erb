<!DOCTYPE html>
<html>
	<body>
		<head>
  			<title>Expenses</title>
  				<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  				<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  				<%= csrf_meta_tags %>
			</head>
				<header class="header">
        			<div class="col-xs-5">
        			<div class="left">
						Expenses
					</div></div>
					<div class="middle">
					<div class="col-xs-5">
						<%= link_to 'Home', root_path, class: "btn btn-default btn-sm" %>
						<%= link_to 'View All', expenses_path, class: "btn btn-default btn-sm" %>
						<%= link_to 'Add New', new_expense_path, class: "btn btn-default btn-sm" %>
					</div>
					<% if user_signed_in? %>
					<div class="col-xs-1">
						<%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-primary btn-sm" %>
					</div></div>
					<% end %> 
				</header>

			<%= yield %>
			<footer class = "site-footer">
					Thank you for using expenses!
			</footer> 
	</body>
</html>