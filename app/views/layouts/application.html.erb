<!DOCTYPE html>
<html>
	<body>
		<head>
  			<title>Expenses</title>
  				<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  				<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  				<%= csrf_meta_tags %>
			</head>
			<nav class="navbar navbar-default">
				<div class="container">
        			<div class="col-xs-5">
        				<div class="left">
							Expenses
						</div>
					</div>
					<div class="middle">
						<div class="col-xs-5">
							<%= link_to 'Home', root_path, class: "btn btn-default btn-sm" %>
							<% if user_signed_in? %>
							<%= link_to 'View All', expenses_path, class: "btn btn-default btn-sm" %>
							<%= link_to 'Add New', new_expense_path, class: "btn btn-default btn-sm" %>
							<% end %>
							<% if !user_signed_in? %>
							<%= link_to 'Login', user_session_path, class: "btn btn-success btn-sm"%>
							<%= link_to 'New User', new_user_session_path, class: "btn btn-warning btn-sm"%>
							<% end %> 

						</div>
					</div>
				</div>
			</nav>

			<%= yield %>
			<% if user_signed_in? %>
				<footer>
					<%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-primary btn-sm" %>
				</footer>
			<% end %> 
	</body>
</html>